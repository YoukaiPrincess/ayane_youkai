<div id="<%= dom_id artwork %>">
  <p>
    <strong>Title:</strong>
    <%= artwork.title %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= artwork.description %>
  </p>

  <p>
    <strong>Image:</strong>
    <%= image_tag artwork.image_url, alt: artwork.title, style: "max-width: 100%; height: auto;" %>
  </p>

</div>
